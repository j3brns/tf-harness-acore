# MCP Servers Terraform Configuration Example
# Copy to terraform.tfvars and customize

# Environment name (dev, test, prod)
environment = "dev"

# Resource name prefix
name_prefix = "agentcore-mcp"

# Deploy S3 Tools MCP Server
deploy_s3_tools = true

# Deploy Titanic Data MCP Server
deploy_titanic_data = true

# Required: Restrict S3 tools to specific buckets (include both bucket and bucket/*)
s3_tools_allowed_buckets = [
  "arn:aws:s3:::example-agentcore-bucket",
  "arn:aws:s3:::example-agentcore-bucket/*",
]

# Optional: Explicit Lambda invoke permission for Bedrock AgentCore service principal
# enable_bedrock_agentcore_invoke_permission = false
# bedrock_agentcore_invoke_principal = "bedrock-agentcore.amazonaws.com"
# bedrock_agentcore_source_account = "ACCOUNT_ID"
# bedrock_agentcore_source_arn = "arn:aws:bedrock-agentcore:REGION:ACCOUNT_ID:gateway/GATEWAY_ID"

# Lambda configuration
lambda_timeout = 30      # seconds
lambda_memory  = 256     # MB

# CloudWatch log retention
log_retention_days = 30

# Tags for all resources
tags = {
  Project = "bedrock-agentcore"
  Owner   = "your-team@example.com"
}
